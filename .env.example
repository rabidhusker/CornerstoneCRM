# ===========================================
# CSTG CRM Platform - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# Supabase Configuration (SHARED DATABASE)
# ===========================================
# IMPORTANT: This CRM shares the Supabase database with:
#   - cornerstone-callbot
#   - ctg-v1 (main site)
#
# Use the SAME Supabase credentials as those projects.
# CRM tables are prefixed with 'crm_' to avoid conflicts.
# See: cornerstone-callbot/SHARED_SUPABASE_PROJECT.md
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================================
# App Configuration
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CSTG CRM

# ===========================================
# Twilio Configuration (SMS/Voice)
# ===========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# Resend Configuration (Email)
# ===========================================
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# Google Calendar Integration (OAuth)
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# ===========================================
# Zillow API Integration
# ===========================================
ZILLOW_API_KEY=your-zillow-api-key

# ===========================================
# DocuSign Integration
# ===========================================
DOCUSIGN_INTEGRATION_KEY=your-docusign-integration-key
DOCUSIGN_SECRET_KEY=your-docusign-secret-key
DOCUSIGN_ACCOUNT_ID=your-docusign-account-id
DOCUSIGN_BASE_URL=https://demo.docusign.net/restapi

# ===========================================
# File Upload Configuration
# ===========================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,application/pdf,.doc,.docx

# ===========================================
# Analytics (Optional)
# ===========================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ===========================================
# Development/Debug
# ===========================================
NODE_ENV=development
